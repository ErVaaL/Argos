{
  "name": "argos-frontend",
  "private": true,
  "workspaces": [
    "host",
    "remote-query",
    "remote-report"
  ],
  "scripts": {
    "dev": "run-p dev:host dev:query dev:report",
    "dev:host": "yarn --cwd host dev",
    "dev:query": "yarn --cwd remote-query dev",
    "dev:report": "yarn --cwd remote-report dev",
    "build": "run-s build:query build:report build:host",
    "build:host": "yarn --cwd host build",
    "build:query": "yarn --cwd remote-query build",
    "build:report": "yarn --cwd remote-report build"
  },
  "devDependencies": {
    "@module-federation/rsbuild-plugin": "^0.22.0",
    "@rsbuild/core": "^1.6.15",
    "@rsbuild/plugin-react": "^1.4.2",
    "@tailwindcss/postcss": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "webpack": "^5"
  }
}
